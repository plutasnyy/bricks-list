<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/partImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:contentDescription="thumbnail"
            android:scaleType="centerInside"/>

    <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="299dp"
            android:layout_height="91dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/partImage"
            android:layout_marginLeft="8dp">

        <TextView
                android:id="@+id/listPartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:scrollbarSize="20dp"
                android:scrollbars="vertical"
                android:textSize="18sp"
                tools:text="Title"/>

        <TextView
                android:id="@+id/listPartSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listPartTitle"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                tools:text="Subtitle"/>
        <Button
                android:text="-"
                android:layout_marginLeft="8dp"
                android:layout_width="36dp"
                android:layout_alignParentBottom="true"
                android:layout_height="36dp" android:id="@+id/removePartInInventoryButton"/>
        <Button
                android:text="+"
                android:layout_marginLeft="52dp"
                android:layout_width="36dp"
                android:layout_alignParentBottom="true"
                android:layout_height="36dp" android:id="@+id/addPartToInventoryButton"/>

    </RelativeLayout>

</RelativeLayout>