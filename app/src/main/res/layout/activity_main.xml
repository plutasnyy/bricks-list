<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:id="@+id/inventoryListView"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/newProjectIdTextView"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="51dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/newProjectIdTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:autofillHints=""/>
    <TextView
            android:text="New project ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="ADD"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:id="@+id/addInventoryButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/newProjectIdTextView"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="Settings"
            android:layout_width="93dp"
            android:layout_height="49dp" tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="302dp" android:id="@+id/settingsButton"/>

</android.support.constraint.ConstraintLayout>