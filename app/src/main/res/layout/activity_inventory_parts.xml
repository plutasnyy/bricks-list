<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InventoryParts">

    <ListView
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:id="@+id/inventoryPartsListView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_width="0dp" android:layout_height="0dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryPartsTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="18sp"
            android:textStyle="bold" android:textColor="#000000"/>
    <Button
            android:text="Export to CSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/csvButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/archiveButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/csvButton"/>
</android.support.constraint.ConstraintLayout>